# =============================================================================
# FIXZIT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Last Updated: November 17, 2025
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (REQUIRED)
# -----------------------------------------------------------------------------
# MongoDB connection string
# Format: mongodb://[username:password@]host[:port]/database[?options]
# Local: mongodb://localhost:27017/fixzit
# Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/fixzit
MONGODB_URI=mongodb://localhost:27017/fixzit

# -----------------------------------------------------------------------------
# NEXTAUTH CONFIGURATION (REQUIRED)
# -----------------------------------------------------------------------------
# The URL of your application (must match deployment URL in production)
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXTAUTH_URL=http://localhost:3000

# Secret key for signing JWT tokens (generate with: openssl rand -base64 32)
# MUST be different in production - keep this secret!
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# -----------------------------------------------------------------------------
# OAUTH PROVIDERS (OPTIONAL)
# -----------------------------------------------------------------------------
# Google OAuth 2.0 credentials
# Get from: https://console.cloud.google.com/apis/credentials
# Callback URL: ${NEXTAUTH_URL}/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth App credentials (optional)
# Get from: https://github.com/settings/developers
# Callback URL: ${NEXTAUTH_URL}/api/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# EMAIL SERVICE (RECOMMENDED)
# -----------------------------------------------------------------------------
# SendGrid API key for transactional emails
# Get from: https://app.sendgrid.com/settings/api_keys
# Used for: Password reset, notifications, reports
SENDGRID_API_KEY=

# Email address to send emails from
# Must be verified in SendGrid
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Fixzit

# -----------------------------------------------------------------------------
# SMS SERVICE (OPTIONAL)
# -----------------------------------------------------------------------------
# Twilio credentials for SMS notifications
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# -----------------------------------------------------------------------------
# WHATSAPP BUSINESS API (OPTIONAL)
# -----------------------------------------------------------------------------
# WhatsApp Business API credentials
# Get from: https://business.facebook.com/wa/manage/home/
WHATSAPP_BUSINESS_API_KEY=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# -----------------------------------------------------------------------------
# PUSH NOTIFICATIONS (OPTIONAL)
# -----------------------------------------------------------------------------
# Firebase Cloud Messaging for web push notifications
# Get from: https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_VAPID_KEY=

# Server-side Firebase Admin SDK (service account key)
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
FIREBASE_ADMIN_PRIVATE_KEY=

# -----------------------------------------------------------------------------
# PAYMENT GATEWAY (OPTIONAL - For Marketplace)
# -----------------------------------------------------------------------------
# PayTabs payment gateway for Saudi market
# Get from: https://site.paytabs.com/
PAYTABS_PROFILE_ID=
PAYTABS_SERVER_KEY=
PAYTABS_REGION=SAU
PAYTABS_CURRENCY=SAR

# Alternative: Stripe (for international payments)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# ERROR TRACKING & MONITORING (RECOMMENDED)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
# Get from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Sentry environment (development, staging, production)
SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# FILE STORAGE (OPTIONAL)
# -----------------------------------------------------------------------------
# AWS S3 for file uploads and document storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=me-south-1
AWS_S3_BUCKET=fixzit-uploads

# Alternative: Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# -----------------------------------------------------------------------------
# FEATURE FLAGS (OPTIONAL - Defaults Shown)
# -----------------------------------------------------------------------------
# Enable/disable RBAC authorization checks
ENABLE_RBAC=true

# Enable/disable audit log creation
ENABLE_AUDIT_LOGS=true

# Enable/disable debug logging (set false in production)
ENABLE_DEBUG_LOGS=false

# Enable/disable API rate limiting
ENABLE_RATE_LIMITING=true

# Enable/disable CORS (configure allowed origins below)
ENABLE_CORS=true

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# Allowed CORS origins (comma-separated)
# Example: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000

# API rate limit (requests per minute per IP)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Session duration in seconds (default: 30 days)
SESSION_MAX_AGE=2592000

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# -----------------------------------------------------------------------------
# EXTERNAL APIs (OPTIONAL)
# -----------------------------------------------------------------------------
# Google Maps API for location services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Weather API for maintenance scheduling
WEATHER_API_KEY=

# Currency exchange rates API
EXCHANGE_RATE_API_KEY=

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS (DEVELOPMENT ONLY)
# -----------------------------------------------------------------------------
# Analyze bundle size (set to true when running 'pnpm analyze')
ANALYZE=false

# Skip type checking during build (NOT recommended)
SKIP_TYPE_CHECK=false

# Skip ESLint during build (NOT recommended)
SKIP_LINT=false

# -----------------------------------------------------------------------------
# PRODUCTION SETTINGS
# -----------------------------------------------------------------------------
# Node environment (development, staging, production)
NODE_ENV=development

# Vercel deployment settings (auto-populated by Vercel)
VERCEL_ENV=
VERCEL_URL=
VERCEL_GIT_COMMIT_SHA=

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable/disable request logging
LOG_REQUESTS=true

# Maximum request body size (in bytes)
MAX_REQUEST_SIZE=10485760

# -----------------------------------------------------------------------------
# DATABASE INDEXES & PERFORMANCE
# -----------------------------------------------------------------------------
# Enable automatic index creation (disable in production for manual control)
MONGODB_AUTO_INDEX=true

# MongoDB connection pool size
MONGODB_POOL_SIZE=10

# Query timeout in milliseconds
MONGODB_QUERY_TIMEOUT=30000

# -----------------------------------------------------------------------------
# CACHE CONFIGURATION (OPTIONAL)
# -----------------------------------------------------------------------------
# Redis connection for caching (recommended for production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Cache TTL in seconds
CACHE_TTL=3600

# Enable/disable caching
ENABLE_CACHE=false

# -----------------------------------------------------------------------------
# BACKGROUND JOBS (OPTIONAL)
# -----------------------------------------------------------------------------
# Bull queue Redis connection for background jobs
BULL_REDIS_URL=redis://localhost:6379

# Number of concurrent workers
BULL_CONCURRENCY=5

# -----------------------------------------------------------------------------
# NOTIFICATION TEMPLATES (OPTIONAL)
# -----------------------------------------------------------------------------
# SendGrid template IDs for various notifications
SENDGRID_TEMPLATE_PASSWORD_RESET=
SENDGRID_TEMPLATE_WELCOME=
SENDGRID_TEMPLATE_WORK_ORDER_CREATED=
SENDGRID_TEMPLATE_WORK_ORDER_COMPLETED=
SENDGRID_TEMPLATE_INVOICE_GENERATED=

# -----------------------------------------------------------------------------
# MULTI-TENANT CONFIGURATION
# -----------------------------------------------------------------------------
# Default organization for super admin
DEFAULT_ORG_ID=

# Enable/disable organization isolation (tenant separation)
ENABLE_TENANT_ISOLATION=true

# -----------------------------------------------------------------------------
# COMPLIANCE & LEGAL
# -----------------------------------------------------------------------------
# Privacy policy URL
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# GDPR compliance settings
ENABLE_GDPR_MODE=false
DATA_RETENTION_DAYS=2555

# -----------------------------------------------------------------------------
# SUPPORT & HELP
# -----------------------------------------------------------------------------
# Support email displayed in app
SUPPORT_EMAIL=support@yourdomain.com

# Help center URL
HELP_CENTER_URL=https://help.yourdomain.com

# -----------------------------------------------------------------------------
# NOTES
# -----------------------------------------------------------------------------
# - REQUIRED variables must be set for the application to work
# - RECOMMENDED variables should be set for production deployments
# - OPTIONAL variables enable additional features
# - Never commit .env.local to version control
# - Rotate secrets regularly (especially NEXTAUTH_SECRET, API keys)
# - Use different secrets for development, staging, and production
# - Keep this file updated when adding new environment variables
