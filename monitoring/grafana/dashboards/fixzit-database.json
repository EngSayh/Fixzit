{
  "annotations": {
    "list": []
  },
  "description": "MongoDB Database Metrics for Fixzit",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "MongoDB Connection Pool",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "targets": [
        {
          "datasource": "prometheus",
          "expr": "mongodb_connections_current{job=\"fixzit\"}",
          "legendFormat": "Current Connections",
          "refId": "A"
        },
        {
          "datasource": "prometheus",
          "expr": "mongodb_connections_available{job=\"fixzit\"}",
          "legendFormat": "Available Connections",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      }
    },
    {
      "title": "Query Latency (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "targets": [
        {
          "datasource": "prometheus",
          "expr": "histogram_quantile(0.95, sum(rate(mongodb_query_duration_seconds_bucket{job=\"fixzit\"}[5m])) by (le, collection))",
          "legendFormat": "{{collection}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "s"
        }
      }
    },
    {
      "title": "Operations by Type",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 3,
      "targets": [
        {
          "datasource": "prometheus",
          "expr": "sum(rate(mongodb_operations_total{job=\"fixzit\"}[5m])) by (operation)",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "ops"
        }
      }
    },
    {
      "title": "Document Counts by Collection",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 4,
      "targets": [
        {
          "datasource": "prometheus",
          "expr": "mongodb_collection_documents{job=\"fixzit\"}",
          "legendFormat": "{{collection}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "unit": "short"
        }
      }
    },
    {
      "title": "Index Hit Ratio",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "id": 5,
      "targets": [
        {
          "datasource": "prometheus",
          "expr": "(mongodb_index_hits{job=\"fixzit\"} / (mongodb_index_hits{job=\"fixzit\"} + mongodb_index_misses{job=\"fixzit\"})) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "green", "value": 95 }
            ]
          }
        }
      }
    },
    {
      "title": "Slow Queries (>100ms)",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "id": 6,
      "targets": [
        {
          "datasource": "prometheus",
          "expr": "sum(increase(mongodb_slow_queries_total{job=\"fixzit\"}[1h]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      }
    },
    {
      "title": "Replica Set Status",
      "type": "table",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "id": 7,
      "targets": [
        {
          "datasource": "prometheus",
          "expr": "mongodb_replset_member_state{job=\"fixzit\"}",
          "format": "table",
          "refId": "A"
        }
      ]
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["fixzit", "mongodb", "database"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-3h",
    "to": "now"
  },
