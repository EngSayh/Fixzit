# Database - USE ENVIRONMENT VARIABLES OR SECRETS MANAGER
# NEVER commit actual MongoDB credentials!
# Format: mongodb+srv://<username>:<password>@<cluster>/<database>
MONGODB_URI=
MONGODB_DB=fixzit

# Redis Cache (Optional - for performance optimization)
# Format: redis://localhost:6379 or redis://user:password@host:port
REDIS_URL=redis://localhost:6379

# JWT Secret - SECURITY CRITICAL  
# Generate: openssl rand -hex 32
# Minimum 32 bytes (64 hex characters)
JWT_SECRET=

# Email Service - SendGrid
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=
FROM_EMAIL=noreply@fixzit.co

# PayTabs (Saudi Arabia)
PAYTABS_PROFILE_ID=
PAYTABS_SERVER_KEY=
PAYTABS_CLIENT_KEY=
PAYTABS_REGION=SAU

# ZATCA E-Invoicing
ZATCA_API_URL=https://api.zatca.gov.sa
ZATCA_CERT_PATH=./certs/zatca-cert.pem

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# NextAuth v5 - OAuth Authentication
# Generate NEXTAUTH_SECRET: openssl rand -base64 32
# Get Google OAuth credentials from: https://console.cloud.google.com/apis/credentials
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Google Maps API
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Remember to restrict the key to your domain(s)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# AWS Storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=me-south-1
AWS_S3_BUCKET=fixzit-uploads