# Database - USE ENVIRONMENT VARIABLES OR SECRETS MANAGER
# NEVER commit actual MongoDB credentials!
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/DATABASE
MONGODB_DB=fixzit

# JWT Secret - SECURITY CRITICAL  
# Generate: openssl rand -hex 32
# Minimum 32 bytes (64 hex characters)
JWT_SECRET=REPLACE_WITH_YOUR_64_CHARACTER_HEX_SECRET

# PayTabs (Saudi Arabia)
PAYTABS_PROFILE_ID=your_profile_id_here
PAYTABS_SERVER_KEY=your_server_key_here
PAYTABS_CLIENT_KEY=your_client_key_here
PAYTABS_REGION=SAU

# ZATCA E-Invoicing
ZATCA_API_URL=https://api.zatca.gov.sa
ZATCA_CERT_PATH=./certs/zatca-cert.pem

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AWS Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=me-south-1
AWS_S3_BUCKET=fixzit-uploads
