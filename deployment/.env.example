# Fixzit Souq Enterprise Platform - Production Environment Variables

# Application Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://mongo_user:mongo_password@mongodb:27017/fixzit?authSource=admin
MONGO_USERNAME=mongo_user
MONGO_PASSWORD=strong_mongo_password_here

# JWT Secret (Generate a strong random string using: openssl rand -hex 32)
JWT_SECRET=REPLACE_WITH_YOUR_OWN_RANDOM_SECRET

# Cache/Queue (In-memory; no external service required)

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@fixzit-souq.com

# SMS Configuration (Taqnyat - CITC-compliant for Saudi Arabia)
# Get credentials from: https://taqnyat.sa
TAQNYAT_BEARER_TOKEN=your_taqnyat_bearer_token_here
TAQNYAT_SENDER_NAME=Fixzit

# Monitoring Configuration
GRAFANA_PASSWORD=strong_grafana_password_here

# SSL Certificate Paths
SSL_CERT_PATH=/etc/ssl/certs/fixzit-souq.crt
SSL_KEY_PATH=/etc/ssl/certs/fixzit-souq.key

# ZATCA Configuration (Saudi Arabia)
ZATCA_PRODUCTION_URL=https://gw-fatoora.zatca.gov.sa
ZATCA_CERTIFICATE_PATH=/app/zatca/production.crt
ZATCA_PRIVATE_KEY_PATH=/app/zatca/production.key

# Application URLs
FRONTEND_URL=https://fixzit-souq.com
API_URL=https://fixzit-souq.com/api

# NextAuth v5 - OAuth Authentication (Production)
# Generate NEXTAUTH_SECRET: openssl rand -base64 32
# Configure Google OAuth at: https://console.cloud.google.com/apis/credentials
NEXTAUTH_SECRET=
NEXTAUTH_URL=https://fixzit-souq.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Google Maps API (Production)
# Create and restrict API key at: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Rate Limiting
AUTH_RATE_LIMIT=5
API_RATE_LIMIT=100

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# Backup Configuration
BACKUP_S3_BUCKET=fixzit-souq-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=me-south-1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log

# Saudi Market Specific
TIMEZONE=Asia/Riyadh
CURRENCY=SAR
VAT_RATE=0.15
LOCALE=ar-SA
