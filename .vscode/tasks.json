{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Server: Start",
      "type": "shell",
      "command": "pnpm dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting...",
          "endsPattern": "Ready in|compiled|Local:|started server"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Dev Server: Keep-Alive",
      "type": "shell",
      "command": "bash scripts/dev-server-keepalive.sh",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      }
    },
    {
      "label": "QA: Verify (Fast)",
      "type": "shell",
      "command": "pnpm run verify:fast",
      "problemMatcher": []
    },
    {
      "label": "QA: Verify (Full)",
      "type": "shell",
      "command": "pnpm run verify:full",
      "problemMatcher": []
    },
    {
      "label": "QA: Scan Duplicates",
      "type": "shell",
      "command": "pnpm run qa:scan:duplicates",
      "problemMatcher": []
    },
    {
      "label": "Agent: Run Fixzit",
      "type": "shell",
      "command": "node scripts/fixzit-agent.mjs --report",
      "problemMatcher": []
    },
    {
      "label": "Test: Models",
      "type": "shell",
      "command": "pnpm run test:models",
      "problemMatcher": []
    },
    {
      "label": "Build & Verify",
      "type": "shell",
      "command": "pnpm typecheck && pnpm lint && pnpm build",
      "problemMatcher": []
    },
    {
