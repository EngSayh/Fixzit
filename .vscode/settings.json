{
  "files.exclude": {
    "**/_archive": true,
    "**/_artifacts": true,
    "**/coverage": true,
    "**/playwright-report": true,
    "**/*.zip": true,
    "**/*.tar.gz": true,
    "**/*.log": true,
    "**/*.bak": true
  },
  "search.exclude": {
    "**/_archive/**": true,
    "**/_artifacts/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/out/**": true,
    "**/build/**": true,
    "**/.turbo/**": true,
    "**/.cache/**": true,
    "**/.git/**": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/out/**": true,
    "**/build/**": true,
    "**/.turbo/**": true,
    "**/.cache/**": true,
    "**/coverage/**": true,
    "**/playwright-report/**": true
  },
  "typescript.tsserver.maxTsServerMemory": 4096,
  "git.autofetch": false,
  "git.postCommitCommand": "none",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {},
  "task.quickOpen.history": 30,
  "problems.showCurrentInStatus": true,
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash",
      "icon": "terminal-bash"
    }
  },
  "terminal.integrated.defaultProfile.linux": "bash",
  "powershell.promptToUpdatePowerShell": false,
  "powershell.startAutomatically": false,
  "powershell.integratedConsole.showOnStartup": false,
  "chatgpt.openOnStartup": true,
  "chat.tools.terminal.autoApprove": {

    
    "cd": true,
    "echo": true,
    "ls": true,
    "pwd": true,
    "cat": true,
    "head": true,
    "tail": true,
    "findstr": true,
    "wc": true,
    "tr": true,
    "cut": true,
    "cmp": true,
    "which": true,
    "basename": true,
    "dirname": true,
    "realpath": true,
    "readlink": true,
    "stat": true,
    "file": true,
    "du": true,
    "df": true,
    "sleep": true,
    "git status": true,
    "git log": true,
    "git show": true,
    "git diff": true,
    "Get-ChildItem": true,
    "Get-Content": true,
    "Get-Date": true,
    "Get-Random": true,
    "Get-Location": true,
    "Write-Host": true,
    "Write-Output": true,
    "Split-Path": true,
    "Join-Path": true,
    "Start-Sleep": true,
    "Where-Object": true,
    "/^Select-[A-Za-z0-9]+/i": true,
    "/^Measure-[A-Za-z0-9]+/i": true,
    "/^Compare-[A-Za-z0-9]+/i": true,
    "/^Format-[A-Za-z0-9]+/i": true,
    "/^Sort-[A-Za-z0-9]+/i": true,
    "column": true,
    "/^column\\b.*-c\\s+[0-9]{4,}/": true,
    "date": true,
    "/^date\\b.*(-s|--set)\\b/": true,
    "find": true,
    "/^find\\b.*-(delete|exec|execdir|fprint|fprintf|fls|ok|okdir)\\b/": true,
    "grep": true,
    "/^grep\\b.*-(f|P)\\b/": true,
    "sort": true,
    "/^sort\\b.*-(o|S)\\b/": true,
    "tree": true,
    "/^tree\\b.*-o\\b/": true,
    "/\\(.+\\)/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/\\{.+\\}/": {
      "approve": true,
      "matchCommandLine": true
    },
    "/`.+`/": {
      "approve": true,
      "matchCommandLine": true
    },
    "rm": true,
    "rmdir": true,
    "del": true,
    "Remove-Item": true,
    "ri": true,
    "rd": true,
    "erase": true,
    "dd": true,
    "kill": true,
    "ps": true,
    "top": true,
    "Stop-Process": true,
    "spps": true,
    "taskkill": true,
    "taskkill.exe": true,
    "curl": true,
    "wget": true,
    "Invoke-RestMethod": true,
    "Invoke-WebRequest": true,
    "irm": true,
    "iwr": true,
    "chmod": true,
    "chown": true,
    "Set-ItemProperty": true,
    "sp": true,
    "Set-Acl": true,
    "jq": true,
    "xargs": true,
    "eval": true,
    "Invoke-Expression": true,
    "iex": true
  },
  "codium.codeCompletion.enable": false,
  
  // === Agent Mode Configuration (Full Auto-Approve) ===
  // Enable Agent Mode + long uninterrupted runs
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 999,
  
  // Kill *all* "Allow?" prompts (use with care)
  "chat.tools.global.autoApprove": true,
  
  // Auto-answer common CLI prompts so runs don't hang
  "chat.tools.terminal.autoReplyToPrompts": true,
  
  // Let agent run tasks without asking
  "github.copilot.chat.agent.runTasks": true,
  
  // Silence OS balloons when input would be needed
  "chat.notifyWindowOnConfirmation": false,
  
  // Enable repo instruction files for PR workflow guidance
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  
  // Session and UI settings
  "chat.agentSessionsViewLocation": "view",
  "chat.checkpoints.showFileChanges": true,
  "chat.editing.autoAcceptDelay": 10
}
