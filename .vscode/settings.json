{
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  // COPILOT AGENT MODE â€” PRODUCTION-SAFE CONFIGURATION (v7.3.0 - Jan 2026)
  // Aligned with Fixzit Agent Working Agreement v7.0.0 + VS Code Copilot Agent Mode
  // Multi-agent governance for Next.js 14 + TS + MongoDB Multi-Tenant SaaS
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

  // ==========================================================
  // CUSTOM INSTRUCTIONS & PROMPTS (Repo-scoped)
  // ==========================================================
  // Uses:
  // - .github/copilot-instructions.md (repo-wide)
  // - .github/instructions/*.instructions.md (path-scoped, via applyTo)
  // - .github/prompts/*.prompt.md (workflow prompts)
  // - AGENTS.md (agent-mode specific guidance)
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,

  // ==========================================================
  // AGENTS.MD / SKILLS (Agent Mode Context)
  // ==========================================================
  "chat.useAgentsMdFile": true,
  "chat.useNestedAgentsMdFiles": true,
  "chat.useAgentSkills": true,

  // ==========================================================
  // ğŸ” TOOLS SAFETY & APPROVALS
  // Global auto-approve ON for unattended operation (user preference)
  // Terminal allowlist provides fine-grained control for safety
  // ==========================================================
  "chat.tools.global.autoApprove": true,

  // Terminal: enable selective auto-approve for safe, read-only commands only.
  "chat.tools.terminal.enableAutoApprove": true,
  "chat.tools.terminal.autoApprove": {
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // âœ… ALLOW: Git read-only / low-risk introspection
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "/^git\\s+(status|diff|log|show|branch|rev-parse|stash\\s+list|remote\\s+-v|ls-files|grep|worktree\\s+list)\\b/": true,
    // Fetch is read-only to working tree, but does hit the network
    "/^git\\s+fetch\\b/": true,

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // âœ… ALLOW: Filesystem read-only / navigation
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "pwd": true,
    "ls": true,
    "dir": true,
    "cat": true,
    "head": true,
    "tail": true,
    "grep": true,
    "find": true,
    "echo": true,
    "cd": true,
    "rg": true,
    "Get-Content": true,
    "Get-ChildItem": true,
    "Select-String": true,
    "Test-Path": true,
    "Get-Item": true,
    "Get-Location": true,

    // Safe workspace setup (non-destructive)
    "mkdir": true,

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // âœ… ALLOW: Package scripts (NO dev server auto-approval)
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "/^pnpm\\s+(lint|type-check|typecheck|test|vitest|build|install)\\b/": true,
    "/^npm\\s+(test|ci|run\\s+lint|run\\s+type-check|run\\s+typecheck|run\\s+build)\\b/": true,
    "/^yarn\\s+(test|lint|type-check|typecheck|build)\\b/": true,

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // âŒ BLOCK: Dev-server commands (violates Fixzit terminal rules)
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "/^pnpm\\s+dev\\b/": false,
    "/^npm\\s+run\\s+dev\\b/": false,
    "/^yarn\\s+dev\\b/": false,

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // âŒ BLOCK: Destructive / risky / network tooling
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "rm": false,
    "rmdir": false,
    "del": false,
    "kill": false,
    "taskkill": false,
    "curl": false,
    "wget": false,
    "powershell": false,
    "bash": false,
    "sh": false,
    "eval": false,
    "chmod": false,
    "chown": false,
    "sudo": false,
    "/^Remove-Item\\b/i": false,
    "/^Invoke-WebRequest\\b/i": false,
    "/^iwr\\b/i": false,
    "/\\b(Stop-Process)\\b/i": false,

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // âŒ BLOCK: Git destructive operations
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "/^git\\s+(push|reset|revert|clean|checkout\\s+--|restore\\s+--|commit\\s+--amend|rebase|merge)\\b/": false,

    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    // âŒ BLOCK: Publishing / registry-impacting
    // â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    "/^npm\\s+(publish|unpublish)\\b/": false,

    // Remote services (require explicit approval)
    "/\\bgh\\b/": false,
    "/\\bvercel\\b/": false
  },

  // Prevent tool-driven writes outside workspace
  "chat.tools.terminal.blockDetectedFileWrites": "outsideWorkspace",

  // ==========================================================
  // CHAT UX SAFETY NETS
  // ==========================================================
  "chat.commandCenter.enabled": true,
  "chat.checkpoints.enabled": true,
  "chat.checkpoints.showFileChanges": true,
  "chat.editRequests": "inline",
  "chat.editing.autoAcceptDelay": 0,
  "chat.notifyWindowOnConfirmation": true,
  "chat.notifyWindowOnResponseReceived": true,
  "chat.editor.wordWrap": "on",
  "chat.editor.fontSize": 14,
  "chat.fontSize": 13,

  // ==========================================================
  // ğŸ§  CONTEXT QUALITY
  // ==========================================================
  "github.copilot.chat.codesearch.enabled": true,

  // ============================================================
  // ğŸŒ LANGUAGE ENABLEMENT (documented)
  // ============================================================
  "github.copilot.enable": {
    "*": true,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "javascriptreact": true,
    "json": true,
    "jsonc": true,
    "yaml": true,
    "markdown": true,
    "html": true,
    "css": true,
    "scss": true,
    "scminput": true,
    "plaintext": false
  },

  // Force English responses
  "github.copilot.chat.localeOverride": "en",

  // ============================================================
  // ğŸ” CODE REVIEW INSTRUCTIONS (documented)
  // ============================================================
  "github.copilot.chat.reviewSelection.enabled": true,
  "github.copilot.chat.reviewSelection.instructions": [
    { "text": "TypeScript strict: no implicit any; no ts-ignore; no unsafe casts." },
    { "text": "Multi-tenant isolation: tenantId/org_id must be in every DB filter and index strategy." },
    { "text": "AuthZ: verify access control at the boundary (API route / server action), not in UI only." },
    { "text": "Async correctness: await promises; handle errors at IO boundaries (DB/network)." },
    { "text": "DX hygiene: keep ESLint and type-check green; no commented-out tests." },
    { "text": "Use Fixzit error codes: [FIXZIT-MODULE-NNN] for traceability." }
  ],

  // ============================================================
  // ğŸ“ COMMIT MESSAGE GENERATION (documented)
  // ============================================================
  "github.copilot.chat.commitMessageGeneration.instructions": [
    { "text": "Use Conventional Commits: type(scope): description" },
    { "text": "Types: feat, fix, docs, refactor, perf, test, chore, ci" },
    { "text": "Subject <= 72 chars; imperative mood" },
    { "text": "Include the active Agent Token: [AGENT-XXXX]" },
    { "text": "Include SSOT issue key if applicable: [ISSUE-KEY]" }
  ],

  // ==========================================================
  // ğŸ“„ PR DESCRIPTION GENERATION
  // ==========================================================
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
    { "text": "Start with a one-sentence summary." },
    { "text": "Add ## Changes with bullet points of what changed." },
    { "text": "Add ## Testing with exact commands run." },
    { "text": "Add ## Risk / Rollback if relevant." },
    { "text": "Note tenant isolation implications for multi-tenant changes." },
    { "text": "Include Agent Token: [AGENT-XXXX] in the description." }
  ],

  // ============================================================
  // ğŸ“¦ ESLINT / TYPESCRIPT / EDITOR (workspace settings)
  // ============================================================
  "eslint.enable": true,
  "eslint.workingDirectories": [{ "mode": "location" }],
  "eslint.options": {
    "cache": true,
    "cacheLocation": ".eslintcache"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.tsserver.maxTsServerMemory": 16384,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.disableAutomaticTypeAcquisition": true,

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // ============================================================
  // âš¡ FILE WATCHING OPTIMIZATIONS (77K+ files workspace)
  // ============================================================
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/_artifacts/**": true,
    "**/artifacts/**": true,
    "**/.artifacts/**": true,
    "**/docs/artifacts/**": true,
    "**/coverage/**": true,
    "**/playwright-report/**": true,
    "**/database/**": true,
    "**/dist/**": true,
    "**/logs/**": true,
    "**/reports/**": true
  },

  "files.exclude": {
    "**/docs/artifacts": true,
    "**/artifacts/audit": true,
    "**/.artifacts": true,
    "**/logs": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/docs/artifacts": true,
    "**/artifacts": true,
    "**/.artifacts": true,
    "**/dist": true,
    "**/_artifacts": true,
    "**/coverage": true,
    "**/*.lock": true
  },

  "files.maxMemoryForLargeFilesMB": 16384,

  // ============================================================
  // ğŸ”€ GIT SETTINGS
  // ============================================================
  "git.untrackedChanges": "hidden",
  "git.ignoreLimitWarning": true,
  "git.branchProtection": ["main", "master"],

  // ============================================================
  // ğŸ¨ EDITOR PERFORMANCE
  // ============================================================
  "editor.codeLens": false,
  "editor.minimap.enabled": false,

  // Disable auto-detect tasks
  "npm.autoDetect": "off",
  "gulp.autoDetect": "off",
  "grunt.autoDetect": "off",
  "jake.autoDetect": "off",

  // Terminal rendering
  "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
  "terminal.integrated.gpuAcceleration": "canvas",

  // ============================================================
  // ğŸ“‹ GITHUB ACTIONS / YAML (disabled local validation)
  // Workflows validated by GitHub on push
  // ============================================================
  "github-actions.workflows.pinned.refresh.enabled": false,
  "github-actions.remote-name": "origin",
  "github-actions.org.slug": "",
  "github-actions.use-enterprise": false,
  "problems.showCurrentInStatus": true,

  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "yaml.validate": false,
  "yaml.schemaStore.enable": false,
  "yaml.schemas": {},
  "yaml.customTags": ["!reference sequence"],
  "files.associations": {
    ".github/workflows/*.yml": "yaml"
  }
}
