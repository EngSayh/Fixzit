{
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.useAgentsMdFile": true,

  "eslint.enable": true,
  "eslint.workingDirectories": [{ "mode": "location" }],

  "typescript.tsdk": "node_modules/typescript/lib",

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // ===== MEMORY OPTIMIZATION (prevents 46GB memory usage) =====
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.git": true,
    "**/dist": true,
    "**/.pnpm-store": true,
    "**/coverage": true,
    "**/_artifacts": true,
    "**/.vitest": true,
    "**/playwright-report": true,
    "**/test-results": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/pnpm-lock.yaml": true,
    "**/.pnpm-store": true,
    "**/coverage": true,
    "**/_artifacts": true,
    "**/ai-memory": true,
    "**/.vitest": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "**/vitest-results.json": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/dist/**": true,
    "**/.pnpm-store/**": true,
    "**/coverage/**": true,
    "**/.vitest/**": true,
    "**/playwright-report/**": true,
    "**/test-results/**": true
  },
  // Utilize full 36GB RAM - no artificial caps
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.preferences.includePackageJsonAutoImports": "auto"
}
