{
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.useAgentsMdFile": true,

  "eslint.enable": true,
  "eslint.workingDirectories": [{ "mode": "location" }],

  "typescript.tsdk": "node_modules/typescript/lib",

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // ===== MEMORY OPTIMIZATION (prevents 46GB memory usage) =====
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/.git": true,
    "**/dist": true,
    "**/.pnpm-store": true,
    "**/coverage": true,
    "**/_artifacts": true,
    "**/artifacts": true,
    "**/reports": true,
    "**/Incoming": true,
    "**/.vercel": true,
    "**/.mdb": true,
    "**/.tmp": true,
    "**/.vitest": true,
    "**/playwright-report": true,
    "**/test-results": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/pnpm-lock.yaml": true,
    "**/.pnpm-store": true,
    "**/coverage": true,
    "**/_artifacts": true,
    "**/artifacts": true,
    "**/reports": true,
    "**/ai-memory": true,
    "**/Incoming": true,
    "**/.vercel": true,
    "**/.mdb": true,
    "**/.tmp": true,
    "**/.vitest": true,
    "**/playwright-report": true,
    "**/test-results": true,
    "**/vitest-results.json": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/.turbo/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/dist/**": true,
    "**/.pnpm-store/**": true,
    "**/coverage/**": true,
    "**/_artifacts/**": true,
    "**/artifacts/**": true,
    "**/reports/**": true,
    "**/Incoming/**": true,
    "**/.vercel/**": true,
    "**/.mdb/**": true,
    "**/.tmp/**": true,
    "**/.vitest/**": true,
    "**/playwright-report/**": true,
    "**/test-results/**": true
  },
  // Cap TS server memory to avoid runaway usage in large workspaces
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "terminal.integrated.env.osx": {
    "NODE_OPTIONS": "--max-old-space-size=8192"
  }
}
