      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{baseUrl}}/app/api/qa/alert", "host": ["{{baseUrl}}"], "path": ["app","api","qa","alert"] },
        "body": { "mode": "raw", "raw": "{\n  \"event\": \"test\",\n  \"data\": { \"ok\": true }\n}" }
      }
    }
  ],
  "variable": [ { "key": "baseUrl", "value": "http://localhost:3000" } ]
}
