{
  "framework": "nextjs",
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm build",
  "outputDirectory": ".next",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=8192",
      "DISABLE_MONGODB_FOR_BUILD": "true"
    }
  },
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": false
  },
  "regions": ["cdg1"]
}
