{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "allowImportingTsExtensions": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "node",
      "react",
      "react-dom",
      "next",
      "google.maps",
      "vitest/globals"
    ],
    "rootDir": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "vitest.config.ts",
    "vitest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "out",
    "tests/unit/models/CmsPage.test.ts",
    "tests/rbac/cross-tenant-isolation.test.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tests/**/*",
    "qa/**/*",
    "scripts/**/*",
    "tools/**/*",
    "i18n/dictionaries/en.ts",
    "i18n/dictionaries/ar.ts",
    "i18n/dictionaries/ar-industries.ts",
    "i18n/new-translations.ts",
    "i18n/sources/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node16"
    }
  }
}
