      id: Date.now().toString(),
      description: "",
      category: "MAINTENANCE_REPAIR",
      accountId: "",
      accountCode: "",
      quantity: 1,
      unitPrice: 0,
      amount: 0,
      taxable: true,
      taxRate: 0.15,
      taxAmount: 0,
    };
    setLineItems([...lineItems, newItem]);
  };

  const removeLineItem = (id: string) => {
    if (lineItems.length > 1) {
      setLineItems(lineItems.filter((item) => item.id !== id));
    }
  };

  const updateLineItem = (
    id: string,
    field: keyof IExpenseLineItem,
    value: string | number | boolean,
  ) => {
    setLineItems(
      lineItems.map((item) => {
        if (item.id !== id) return item;

        const updated = { ...item, [field]: value };

        // Recalculate amounts
        if (field === "quantity" || field === "unitPrice") {
          updated.amount = updated.quantity * updated.unitPrice;
          updated.taxAmount = updated.taxable
            ? updated.amount * updated.taxRate
            : 0;
        }

        if (field === "taxable" || field === "taxRate") {
          updated.taxAmount = updated.taxable
            ? updated.amount * updated.taxRate
            : 0;
        }

        // Update account code when account changes
        if (field === "accountId") {
          const account = chartAccounts.find((a) => a.id === value);
          if (account) {
            updated.accountCode = account.code;
          }
        }

        return updated;
      }),
    );
  };

