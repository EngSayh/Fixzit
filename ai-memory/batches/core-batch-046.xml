            : `${t("login.continueWith", "Continue with")} Google`}
        </span>
      </button>
      {error && (
        <div
          role="alert"
          aria-live="polite"
          className="text-destructive-foreground text-sm text-center p-2 bg-destructive/10 rounded-2xl"
        >
          {error}
        </div>
      )}
    </div>
  );
}

