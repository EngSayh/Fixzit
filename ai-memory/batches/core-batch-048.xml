    const headers = [
      t("tb.col.code", "Account Code"),
      t("tb.col.name", "Account Name"),
      t("tb.col.type", "Type"),
      t("tb.col.debit", "Debit"),
      t("tb.col.credit", "Credit"),
      t("tb.col.balance", "Balance"),
    ];

    const rows = data.accounts.map((acc) => [
