              />
            </label>
            <label className="text-sm text-muted-foreground">
              {auto("Deadline", "form.fields.deadline")}
              <input
                type="date"
                value={form.deadline}
                onChange={(event) =>
                  setForm({ ...form, deadline: event.target.value })
