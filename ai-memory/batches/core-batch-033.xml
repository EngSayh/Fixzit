              <Button type="submit" className="w-full" disabled={creating}>
                {creating && <Loader2 className="h-4 w-4 animate-spin me-2" />}
                {t("hr.settings.leaveTypes.form.submit", "Save leave type")}
              </Button>
            </form>
          </CardContent>
        </Card>
      </div>
    </div>
  );
