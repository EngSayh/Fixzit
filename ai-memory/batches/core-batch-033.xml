                    {t(
                      "hr.settings.leaveTypes.form.isPaidHelper",
                      "Paid leave deducts from payroll balances.",
                    )}
                  </p>
                </div>
                <Switch
                  checked={form.isPaid}
                  onCheckedChange={(checked) =>
                    setForm((prev) => ({ ...prev, isPaid: checked }))
