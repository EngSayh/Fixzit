{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "services/**/*.ts",
    "services/**/*.tsx",
    "server/**/*.ts",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "providers/**/*.ts",
    "providers/**/*.tsx",
    "contexts/**/*.ts",
    "contexts/**/*.tsx",
    "types/**/*.ts",
    "middleware.ts",
    "instrumentation.ts",
    "instrumentation-node.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    "playwright-report",
    "test-results",
    "public",
    "qa",
    "scripts",
    "tools",
    "tests",
    "deployment",
    "issue-tracker",
    "docs",
    "kb",
    "ai",
    "ai-memory",
    "_artifacts",
    "reports",
    "artifacts"
  ]
}
